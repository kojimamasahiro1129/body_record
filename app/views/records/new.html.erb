<%= form_for @record do |f| %>
<%#= binding.pry %>
<%= render 'layouts/error_messages', model: f.object %>
<%= render partial: 'layouts/flash',class: "alert-danger"	 %>
<%# binding.pry %>
<%#= flash[:alert]%>
<!--体記録系-->

  <div class="form-group">
    <%= f.label :画像%>
    <%= f.file_field :avatar %>
  </div>
  
  <div class="form-group">
    <%= f.label :体重 %>
    <%= f.number_field :weight, step: "0.1" %>
  </div>

  <div class="form-group">
    <%= f.label :体脂肪率 %>
    <%= f.number_field :fat, step: "0.1" %>
  </div>
  
  <div class="form-group">
    <%= f.label :bmi %>
    <%= f.number_field :bmi, step: "0.1" %>
  </div>
  
  
  
  <div class="form-group">
    <%= label_tag(:food_ids,"食べ物") %>
    <%= select_tag(:food_ids, options_for_select(Food.all.map{|o| [o.name, o.id]}), include_hidden: false ,class: 'sample_select2',multiple: true) %>
  </div>
  
<div class="form-group">
  <%= f.label :日付 %>
  <%= f.date_field :date %>
</div>  
  
  <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

<% end %>


<%= link_to "ホームへ戻る",root_path %>


