<%= form_for @record do |f| %>
  <div class="form-group">
    <%= f.label :写真 %>
    <%= f.file_field :avatar, id: "id"%>
  </div>

  <div class="form-group">
    <%= f.label :体重 %>
    <%= f.number_field :weight, step: "0.1" %>
  </div>

  <div class="form-group">
    <%= f.label :体脂肪率 %>
    <%= f.number_field :fat, step: "0.1" %>
  </div>
  
  <div class="form-group">
    <%= f.label :bmi %>
    <%= f.number_field :bmi, step: "0.1" %>
  </div>

  <div class="form-group">
    <%= f.label :日付 %>
    <%= f.date_field :date %>
  </div>  
  
  <%= f.submit '投稿', class: 'btn btn-black' %>

<% end %>




  